@model WebBanHangOnline.Models.EF.Order
@using PagedList.Mvc
@{
    ViewBag.Title = "Chi tiết đơn hàng";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home/index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/order/index" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">@ViewBag.Title</h2>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã đơn hàng</label>
                        <p class="form-group">@Model.Code</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Họ tên khách</label>
                        <p class="form-group">@Model.CustomerName</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tổng tiền</label>
                        <p class="form-group">@Model.TotalAmount</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <p class="form-group">@Model.Phone</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <p class="form-group">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-group">@Model.Email</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Trạng Thái</label>
                        <p class="form-group">@(Model.TypePayment==1?"Chưa thanh toán":"Đã thanh toán")</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Địa chỉ nhận hàng</label>
                        <p class="form-group">@Model.Address</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <h2>Danh sách sản phẩm</h2>
                </div>

                <div class="col-12">
                    @Html.Action("Partial_SanPham", "Order", new {id = Model.Id})
                </div>
            </div>


        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>

