@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "Danh Mục Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home/index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productcategory/index" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản Lý Danh Mục Sản Phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/productcategory/add" class="btn btn-primary">Thêm Mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm("index", "productcategory", FormMethod.Get))
                    {
                        <div class="form-group">
                            <div class="input-group input-group-lg">
                                @Html.TextBox("Searchtext", "", new { @class = "form-control form-control-lg", @type = "search", @placeholder = "Nhập thông tin tìm kiếm...." })
                                @*<input type="search" class="form-control form-control-lg" name="searchText" placeholder="Nhập thông tin tìm kiếm...." value="">*@
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-lg btn-default">
                                        <i class="fa fa-search"></i>Tìm Kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                <th><input type="checkbox" id="SelectAll" /></th>
                <th>STT</th>
                <th>Tiêu Đề</th>
                <th>Ngày Tạo</th>
                <th class="text-center">Hành Động</th>
                <th></th>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var index = 1;
                        foreach (var item in Model)
                        {

                            <tr id="trow_@item.Id">
                                
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@index</td>
                                <td>@item.Title</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>

                                <td class="text-center">
                                    <a href="/admin/productCategory/edit/@item.Id" class="btn btn-warning">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            index++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào ở đây cả !</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>


@section scripts{
    <script>

        $(document).ready(function () {
            //delete All News
            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');

                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;

                        }
                        else {
                            str += "," + _id;
                        }
                        i++;
                    }
                    else {
                        checkbox.attr('selected', '');
                    }

                })
                debugger;
                if (str.length > 0) {
                    var conf = confirm('Bạn có muốn xóa các bản ghi đẫ chọn hay không ?');
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/posts/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });

            //select all record
            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    }
                    else {
                        checkbox.attr('selected', '');
                    }
                })
            })


            //delete a record
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data('id');
                var conf = confirm("Bạn có muốn xóa bản ghi này không ?");
                if (conf === true) {
                    $.ajax({
                        url: '/admin/posts/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success == true) {
                                $('#trow_' + id).remove();
                            }
                        }
                    })
                }
            });


            //display active icon

            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = $(this).data('check');

                $.ajax({
                    url: '/admin/posts/IsActive',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        debugger;
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            }
                            else {

                                btn.html("<i class='fa fa-times text-danger'></i>");
                            }
                        }
                    }
                })
            });
        })

    </script>
}

